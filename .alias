alias du='du -h'
alias ij='/opt/intellij-ue-stable/bin/idea.sh'
alias work='ssh skotep.svl.corp.google.com'
alias grpe='grep'

function vf() {
	src=$2
	if [ -z "${src}" ]; then src="."; fi
    FILES=($(find "${src}" | grep $1))
    if [ "${#FILES[@]}" == 1 ]; then 
        vi ${FILES[0]}
    else
        select FILENAME in ${FILES[@]}; do
            vi $FILENAME
        done
    fi
}
