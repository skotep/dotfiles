function vf() {
	src=$2
	if [ -z "${src}" ]; then src="."; fi
    FILES=($(find "${src}" | grep $1))
    if [ "${#FILES[@]}" == 1 ]; then 
        vi ${FILES[0]}
    else
        select FILENAME in ${FILES[@]}; do
            vi $FILENAME
        done
    fi
}

function gig() {
	filelist=$(g4 p -s relativepath | grep \.go | awk '{print $2}')
	for file in $filelist; do
	    echo "goimports $file"
		goimports -w $file
	done
	for filedir in $(echo $filelist | xargs dirname | sort -u); do
	    echo "glaze $filedir"
		glaze $filedir
	done
}
