function gc() {
	d=$1
	if [ -z "$d" ]; then
		d=$(pwd | sed 's|/google3.*||' | sed 's|.*/||')
	fi
	cd /google/src/cloud/skotep/${d}/google3/platforms/capacity/intent/catan
}
